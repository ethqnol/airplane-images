---
export interface Props {
  title: string;
}

const { title } = Astro.props;
const user = Astro.locals.user;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Aircraft image host." />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <nav class="navbar">
      <div class="nav-container">
        <a href="/" class="nav-brand">
            Ewu's Airplane Image Host
        </a>
        
        <div class="nav-links">
          <a href="/gallery" class="nav-link">Gallery</a>
          {user ? (
            <>
              <a href="/upload" class="nav-link">Upload</a>
              <a href="/my-images" class="nav-link">My Images</a>
              <div class="user-menu">
                {user.picture ? (
                  <img 
                    src={user.picture} 
                    alt={user.name || 'User'} 
                    class="user-avatar"
                    onerror="this.style.display='none'; this.nextElementSibling.style.display='flex'"
                  />
                ) : null}
                <div class="user-avatar-fallback" style={user.picture ? "display: none" : ""}>
                  {(user.name || 'U').charAt(0).toUpperCase()}
                </div>
                <span class="user-name">{user.name}</span>
                <a href="/api/auth/signout" class="sign-out">Sign Out</a>
              </div>
            </>
          ) : (
            <a href="/signin" class="nav-link signin-btn">Sign In</a>
          )}
        </div>
      </div>
    </nav>

    <slot />

    <footer class="footer">
      <div class="footer-container">
        <p>&copy; 2024 Ethan Wu. Built with Astro and Cloudflare.</p>
      </div>
    </footer>
  </body>
</html>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
  
  * {
    box-sizing: border-box;
  }

  html {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    line-height: 1.6;
    font-size: 16px;
  }

  body {
    margin: 0;
    background: #0f0f0f;
    color: #e4e4e7;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    font-weight: 400;
  }

  main {
    flex: 1;
  }

  .navbar {
    background: rgba(15, 15, 15, 0.95);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    padding: 1rem 0;
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 2rem;
  }

  .nav-brand {
    font-size: 1.375rem;
    font-weight: 700;
    text-decoration: none;
    color: #e4e4e7;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .nav-brand::before {
    content: 'âœˆ';
    font-size: 1.5rem;
    color: #60a5fa;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .nav-link {
    text-decoration: none;
    color: #a1a1aa;
    font-weight: 500;
    font-size: 0.9rem;
    transition: color 0.2s ease;
    position: relative;
  }

  .nav-link:hover {
    color: #60a5fa;
  }

  .signin-btn {
    background: #2563eb;
    color: white !important;
    padding: 0.625rem 1.25rem;
    border-radius: 8px;
    font-weight: 500;
    font-size: 0.9rem;
    transition: all 0.2s ease;
    box-shadow: 0 1px 2px rgba(37, 99, 235, 0.4);
  }

  .signin-btn:hover {
    background: #1d4ed8;
    color: white !important;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(37, 99, 235, 0.5);
  }


  .user-menu {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.5rem 1rem;
    background: rgba(39, 39, 42, 0.8);
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .user-avatar {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid rgba(255, 255, 255, 0.9);
  }

  .user-avatar-fallback {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: #52525b;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 14px;
    border: 2px solid rgba(255, 255, 255, 0.2);
  }

  .user-name {
    font-weight: 500;
    color: #d4d4d8;
    font-size: 0.9rem;
  }

  .sign-out {
    color: #a1a1aa;
    text-decoration: none;
    font-size: 0.85rem;
    padding: 0.375rem 0.75rem;
    border-radius: 6px;
    transition: all 0.2s ease;
    font-weight: 500;
  }

  .sign-out:hover {
    background: rgba(63, 63, 70, 0.8);
    color: #e4e4e7;
  }

  .footer {
    background: rgba(15, 15, 15, 0.8);
    backdrop-filter: blur(20px);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding: 3rem 0;
    margin-top: 6rem;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    text-align: center;
    color: #a1a1aa;
    font-size: 0.9rem;
  }

  @media (max-width: 768px) {
    .nav-container {
      padding: 0 1rem;
    }

    .nav-links {
      gap: 1rem;
    }

    .user-name {
      display: none;
    }

    .user-menu {
      padding: 0.375rem 0.75rem;
    }

    .footer-container {
      padding: 0 1rem;
    }
  }

</style>