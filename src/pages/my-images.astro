---
import Layout from '../layouts/Layout.astro';
import UserImageGallery from '../components/UserImageGallery.astro';

const user = Astro.locals.user;

console.log('My Images - Current user:', user ? { id: user.id, email: user.email, name: user.name } : 'none');

if (!user) {
  return Astro.redirect('/signin');
}

// No filters needed for My Images
---

<Layout title="My Images">
  <main>
    <div class="container">
      <header class="gallery-header">
        <h1>My Images</h1>
        <p class="subtitle">Manage your uploaded aircraft images</p>
      </header>
      
      <UserImageGallery 
        userId={user.id}
      />
    </div>
  </main>
</Layout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .gallery-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  h1 {
    color: #f4f4f5;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    color: #a1a1aa;
    font-size: 1.1rem;
    margin-bottom: 2rem;
  }


  @media (max-width: 768px) {
    .container {
      padding: 1rem;
    }
  }

</style>

